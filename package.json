{
  "name": "esp32-rescue-monitoring-system",
  "version": "1.0.0",
  "description": "ESP32 Rescue Operation Monitoring System",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon backend/server.js",
    "client": "cd frontend && npm start",
    "install-all": "npm install && cd frontend && npm install",
    "seed-admin": "node backend/scripts/seedAdmin.js",
    "seed-fighters": "node backend/scripts/seedFighters.js",
    "list-commandos": "node backend/scripts/listCommandoCredentials.js",
    "create-test-commando": "node backend/scripts/createTestCommando.js",
    "reset-commandos": "node backend/scripts/resetAndCreateCommandos.js"
  },
  "keywords": ["esp32", "rescue", "monitoring", "iot"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "socket.io": "^4.6.1",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  }
}

